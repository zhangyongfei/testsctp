FUNCTION(AddSrcDir FILELIST PATHLIST)
    SET(TMPLIST)
	LIST(LENGTH ARGV argc)
    SET(i 1)
	WHILE(i LESS ${argc})	    
	    LIST(GET ARGV ${i} argvalue)  
        SET(TMPSRCLIST)
        AUX_SOURCE_DIRECTORY(${argvalue} TMPSRCLIST)
	    INCLUDE_DIRECTORIES(${argvalue})
	    SET(TMPFILELIST)
	    FILE(GLOB TMPFILELIST ${argvalue}/*.h)
		SET(TMPLIST "${TMPLIST};${TMPSRCLIST};${TMPFILELIST}")
		MATH(EXPR i "${i} + 1")
    ENDWHILE()
	LIST(GET ARGV 0 argvalue) 
	IF("X${${argvalue}}" EQUAL "X")
	    SET(${FILELIST} "${TMPLIST}" PARENT_SCOPE)
	ELSE()
	    SET(${FILELIST} "${${argvalue}};${TMPLIST}" PARENT_SCOPE)
	ENDIF()
ENDFUNCTION(AddSrcDir)

