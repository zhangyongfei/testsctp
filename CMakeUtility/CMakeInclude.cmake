FUNCTION(AddHDir PATHLIST)
    INCLUDE_DIRECTORIES(${PATHLIST})
ENDFUNCTION(AddHDir)

FUNCTION(AddHDirWin32 DEFS)
IF(WIN32)
    AddHDir(${DEFS})
ENDIF()
ENDFUNCTION(AddHDirWin32)

FUNCTION(AddHDirLinux DEFS)
IF(UNIX AND NOT APPLE)
    AddHDir(${DEFS})
ENDIF()
ENDFUNCTION(AddHDirLinux)

FUNCTION(AddHDirOsx DEFS)
IF(APPLE)
    AddHDir(${DEFS})
ENDIF()
ENDFUNCTION(AddHDirOsx)

FUNCTION(AddHDirAndroid DEFS)
IF(UNIX AND NOT APPLE AND NOT CYGWIN)
    AddHDir(${DEFS})
ENDIF()
ENDFUNCTION(AddHDirAndroid)
