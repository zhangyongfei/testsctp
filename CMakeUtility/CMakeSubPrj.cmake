FUNCTION(AddSubPrj PRJPATH)
	ADD_SUBDIRECTORY(${PRJPATH})
ENDFUNCTION(AddSubPrj)

FUNCTION(AddSubPrjWin32 DEFS)
IF(WIN32)
    AddSubPrj(${PRJPATH})
ENDIF()
ENDFUNCTION(AddSubPrjWin32)

FUNCTION(AddSubPrjLinux DEFS)
IF(UNIX AND NOT APPLE)
    AddSubPrj(${DEFS})
ENDIF()
ENDFUNCTION(AddSubPrjLinux)

FUNCTION(AddSubPrjOsx DEFS)
IF(APPLE)
    AddSubPrj(${DEFS})
ENDIF()
ENDFUNCTION(AddSubPrjOsx)

FUNCTION(AddSubPrjAndroid DEFS)
IF(UNIX AND NOT APPLE AND NOT CYGWIN)
    AddSubPrj(${DEFS})
ENDIF()
ENDFUNCTION(AddSubPrjAndroid)
